{
  "name": "meddb",
  "version": "0.1.0",
  "private": true,
  "main": "public/electron.js",
  "dependencies": {
    "@craco/craco": "^6.2.0",
    "@date-io/moment": "^2.11.0",
    "@emotion/react": "^11.4.1",
    "@emotion/styled": "^11.3.0",
    "@fontsource/roboto": "^4.5.0",
    "@mui/icons-material": "^5.0.1",
    "@mui/material": "^5.0.1",
    "@mui/lab": "^5.0.0-alpha.48",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "clsx": "^1.1.1",
    "electron-is-dev": "^2.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.15.3",
    "react-redux": "^7.2.4",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "sequelize": "^6.6.5",
    "sqlite3": "^5.0.2",
    "web-vitals": "^1.1.2"
  },
  "scripts": {
    "start-react": "craco start",
    "build-react": "craco build",
    "test-react": "craco test",
    "eject-react": "react-scripts eject",
    "start-electron": "nodemon --watch ./public/* --exec \"electron .\" ",
    "dev": "concurrently \"npm run start-react\" \"wait-on http://localhost:3000 && npm run start-electron\" ",
    "postinstall": "electron-builder install-app-deps",
    "build": "npm run build-react && electron-builder"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "homepage": "./",
  "build": {
    "appId": "com.dimsby.meddb",
    "productName": "Meddb",
    "files": [
      "build/**/*"
    ],
    "directories": {
      "buildResources": "build"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^13.1.7",
    "concurrently": "^6.2.1",
    "electron-builder": "^22.11.7",
    "nodemon": "^2.0.12",
    "wait-on": "^6.0.0"
  }
}
